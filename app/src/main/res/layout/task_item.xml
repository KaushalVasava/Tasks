<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="?attr/selectableItemBackground"
    android:elevation="5dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/purple_500">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnBackground">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/date_layout"
            android:layout_width="50dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/progress_background"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_calendar"
                    style="@style/IconButton"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/add_date_time"
                    android:maxWidth="30dp"
                    android:minWidth="15dp"
                    android:scaleType="fitCenter"
                    app:tint="@color/black"
                    android:src="@drawable/ic_calendar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_date"
                    style="@style/SubTitle.Bold"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="3"
                    android:minHeight="50dp"
                    android:paddingHorizontal="2dp"
                    android:textColor="@color/black"
                    app:autoSizeMaxTextSize="11sp"
                    app:autoSizeMinTextSize="6sp"
                    app:autoSizeStepGranularity="0.5sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_calendar"
                    tools:text="30\nJuly\n2022" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txt_title"
            style="@style/Title"
            android:ellipsize="end"
            android:maxLines="5"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/txt_subtask"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:layout_constraintStart_toEndOf="@id/checkbox"
            app:layout_constraintTop_toTopOf="@id/btn_delete"
            tools:text="Title" />

        <ImageView
            android:id="@+id/btn_delete"
            style="@style/IconButton"
            android:layout_marginEnd="5dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/edit_delete_task"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toStartOf="@id/date_layout"
            app:layout_constraintStart_toEndOf="@id/txt_title"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox"
            style="@style/CustomCheckbox02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@id/img_imp2"
            app:layout_constraintEnd_toStartOf="@id/txt_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_imp" />

        <ImageView
            android:id="@+id/img_imp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/important_task"
            android:src="@drawable/ic_pin"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_imp2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/important_task"
            android:src="@drawable/ic_pin"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="2dp"
            android:progress="40"
            android:elevation="4dp"
            android:progressDrawable="@drawable/background_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_reminder"
            app:layout_constraintStart_toStartOf="@id/txt_title"
            app:layout_constraintTop_toBottomOf="@id/txt_subtask" />

        <TextView
            android:id="@+id/task_progress"
            style="@style/SubTitle"
            android:elevation="4dp"
            android:gravity="center"
            android:textColor="@color/black"
            app:autoSizeMaxTextSize="12sp"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeStepGranularity="0.5sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/progress_bar"
            app:layout_constraintEnd_toEndOf="@id/progress_bar"
            app:layout_constraintStart_toStartOf="@id/progress_bar"
            app:layout_constraintTop_toTopOf="@id/progress_bar"
            tools:text="0%" />

        <TextView
            android:id="@+id/txt_subtask"
            style="@style/SubTitle"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="5"
            app:layout_constraintBottom_toTopOf="@id/progress_bar"
            app:layout_constraintEnd_toStartOf="@id/date_layout"
            app:layout_constraintStart_toStartOf="@id/txt_title"
            app:layout_constraintTop_toBottomOf="@id/txt_title" />

        <TextView
            android:id="@+id/txt_reminder"
            style="@style/SubTitle"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/background_reminder"
            android:elevation="4dp"
            android:drawablePadding="2dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="1dp"
            android:textColor="@color/reminder_selector"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_reminder_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/date_layout"
            app:layout_constraintTop_toBottomOf="@id/txt_subtask"
            tools:text="Reminder"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>