<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SubTaskFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="16dp"
            android:layout_marginTop="5dp"
            android:progressDrawable="@drawable/background_progress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_task_progress"
            style="@style/SubTitle"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/progress_bar"
            app:layout_constraintEnd_toEndOf="@id/progress_bar"
            app:layout_constraintStart_toStartOf="@id/progress_bar"
            app:layout_constraintTop_toTopOf="@id/progress_bar"
            tools:text="0/0 subtasks completed" />

        <TextView
            android:id="@+id/txt_done"
            style="@style/SubTitle"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:text="@string/mark_as_completed"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/cb_task_completed"
            app:layout_constraintStart_toEndOf="@id/cb_task_completed"
            app:layout_constraintTop_toTopOf="@id/cb_task_completed" />

        <CheckBox
            android:id="@+id/cb_task_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reminder_layout" />

        <LinearLayout
            android:id="@+id/reminder_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_bar">

            <ImageView
                android:id="@+id/img_reminder"
                style="@style/IconButton"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2dp"
                android:contentDescription="@string/reminder"
                android:padding="0dp"
                android:src="@drawable/ic_reminder" />

            <TextView
                android:id="@+id/txt_reminder"
                style="@style/SubTitle"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:text="@string/add_date_time"
                android:textColor="@color/reminder_selector"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/btn_cancel_reminder"
                style="@style/IconButton"
                android:contentDescription="@string/cancel_reminder"
                android:padding="0dp"
                android:src="@drawable/ic_cancel"
                android:visibility="gone"
                app:tint="@color/black"
                tools:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_create_new_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/create_new_sub_task"
            android:visibility="gone"
            app:drawableTopCompat="@drawable/ic_add_task"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sub_task_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="5dp"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/progress_bar"
            app:layout_constraintStart_toStartOf="@id/reminder_layout"
            app:layout_constraintTop_toBottomOf="@id/cb_task_completed"
            tools:listitem="@layout/task_item"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_task"
        style="@style/FloatingActionButton"
        android:layout_gravity="bottom|end"
        android:contentDescription="@string/add_task"
        android:src="@drawable/ic_add"
        app:tint="?attr/colorOnPrimary" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_voice_task"
        style="@style/FloatingActionButton"
        android:layout_gravity="bottom|start"
        android:contentDescription="@string/add_task"
        android:src="@drawable/ic_mic"
        app:tint="?attr/colorOnPrimary" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>