<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CircularCardView"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:background="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:strokeColor="?colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_reminder"
            style="@style/SubTitle"
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/background_reminder"
            android:drawablePadding="2dp"
            android:elevation="4dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="1dp"
            android:textColor="@color/reminder_selector"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_reminder_small"
            app:layout_constraintBottom_toBottomOf="@id/date_layout"
            app:layout_constraintEnd_toStartOf="@id/date_layout"
            app:layout_constraintStart_toStartOf="@id/txt_title"
            app:layout_constraintTop_toTopOf="@id/date_layout"
            tools:text="12:10 am"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/btn_cancel"
            style="@style/IconButton"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_cancel"
            app:layout_constraintBottom_toBottomOf="@id/txt_reminder"
            app:layout_constraintStart_toEndOf="@id/txt_reminder"
            app:layout_constraintTop_toTopOf="@id/txt_reminder" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/date_layout"
            style="@style/CircularCardView"
            android:layout_width="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            app:layout_constraintVertical_bias="1">

            <TextView
                android:id="@+id/txt_date"
                style="@style/SubTitle.Bold"
                android:layout_width="wrap_content"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:maxLines="3"
                android:paddingHorizontal="4dp"
                android:textColor="@color/black"
                app:autoSizeMaxTextSize="11sp"
                app:autoSizeMinTextSize="6sp"
                app:autoSizeStepGranularity="0.5sp"
                app:autoSizeTextType="uniform"
                app:drawableStartCompat="@drawable/ic_calendar_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="30 July,2022" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txt_title"
            style="@style/Title"
            android:ellipsize="end"
            android:maxLines="5"
            android:paddingVertical="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:layout_constraintStart_toEndOf="@id/checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:text="Title" />

        <ImageView
            android:id="@+id/btn_delete"
            style="@style/IconButton"
            android:layout_marginEnd="5dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/edit_delete_task"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_title"
            app:layout_constraintTop_toTopOf="@id/txt_title" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox"
            style="@style/CustomCheckbox"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@id/img_imp2"
            app:layout_constraintEnd_toStartOf="@id/txt_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_imp" />

        <ImageView
            android:id="@+id/img_imp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/important_task"
            android:src="@drawable/ic_pin"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_imp2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/important_task"
            android:src="@drawable/ic_pin"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>