    android:paddingHorizontal="16dp"
    tools:context=".ui.fragments.overview.OverviewFragment">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:constraint_referenced_ids="top_layout,bottom_layout"
        app:flow_horizontalStyle="packed"
        app:flow_maxElementsWrap="1"
        app:flow_horizontalGap="8dp"
        app:flow_verticalGap="8dp"
        app:flow_verticalStyle="spread_inside"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/top_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pending_task_card_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/dark_error"
                app:layout_constraintBottom_toBottomOf="@id/completed_task_card_view"
                app:layout_constraintEnd_toStartOf="@id/completed_task_card_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/completed_task_card_view">

                <TextView
                    android:id="@+id/txt_pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:text="@string/pending"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/completed_task_card_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="@color/light_green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/pending_task_card_view"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_completed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:text="@string/completed"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </com.google.android.material.card.MaterialCardView>

            <CalendarView
                android:id="@+id/date_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/completed_task_card_view" />

           </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


