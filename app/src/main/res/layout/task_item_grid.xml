<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CircularCardView"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    app:strokeColor="?colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/img_category"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:contentDescription="@null"
            android:src="@drawable/background_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/Title"
            android:ellipsize="end"
            android:paddingVertical="5dp"
            app:layout_constraintBottom_toTopOf="@id/txt_subtask"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:layout_constraintStart_toEndOf="@id/checkbox"
            app:layout_constraintTop_toBottomOf="@id/img_category"
            tools:text="Title" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/edit_delete_task"
            android:padding="5dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_title"
            app:layout_constraintTop_toBottomOf="@id/img_category" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox"
            style="@style/CustomCheckbox"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:layout_constraintBottom_toTopOf="@id/img_imp2"
            app:layout_constraintEnd_toStartOf="@id/txt_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_imp" />

        <ImageView
            android:id="@+id/img_imp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/important_task"
            android:src="@drawable/ic_pin"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_category" />

        <ImageView
            android:id="@+id/img_imp2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/important_task"
            android:src="@drawable/ic_pin"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            android:id="@+id/progress_layout"
            layout="@layout/task_progress_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/txt_title"
            app:layout_constraintTop_toBottomOf="@id/txt_subtask" />

        <ImageView
            android:id="@+id/img_more"
            style="@style/IconButton"
            android:layout_width="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/more"
            android:padding="0dp"
            android:src="@drawable/ic_expand_more"
            app:layout_constraintBottom_toTopOf="@id/progress_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_delete"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/txt_subtask"
            style="@style/SubTitle"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@id/progress_layout"
            app:layout_constraintEnd_toStartOf="@id/img_more"
            app:layout_constraintStart_toStartOf="@id/txt_title"
            app:layout_constraintTop_toBottomOf="@id/txt_title" />

        <TextView
            android:id="@+id/txt_reminder"
            style="@style/SubTitle.Bold"
            android:layout_marginEnd="8dp"
            android:background="@drawable/background_round"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:paddingVertical="1dp"
            android:textColor="@color/reminder_selector"
            android:visibility="visible"
            app:drawableStartCompat="@drawable/ic_reminder_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/txt_title"
            app:layout_constraintTop_toBottomOf="@id/txt_date"
            tools:text="Reminder" />

        <TextView
            android:id="@+id/txt_date"
            style="@style/SubTitle.Bold"
            android:layout_marginVertical="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/background_date"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:maxLines="3"
            android:paddingHorizontal="4dp"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_calendar_small"
            app:layout_constraintBottom_toTopOf="@id/txt_reminder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/txt_title"
            app:layout_constraintTop_toBottomOf="@id/progress_layout"
            tools:text="30,July 2022" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>