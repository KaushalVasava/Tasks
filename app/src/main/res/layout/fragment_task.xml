<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.TaskFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:layout_anchorGravity="center">

        <TextView
            android:id="@+id/txt_title"
            style="@style/Title.BOLD"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/btn_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Date today" />

        <ImageView
            android:id="@+id/btn_settings"
            style="@style/IconButton"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/settings"
            android:padding="8dp"
            android:src="@drawable/ic_settings"
            app:layout_constraintBottom_toBottomOf="@id/txt_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_title"
            app:layout_constraintTop_toTopOf="@id/txt_title" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:constraint_referenced_ids="top_layout,bottom_layout"
            app:flow_horizontalStyle="packed"
            app:flow_maxElementsWrap="1"
            app:flow_verticalStyle="packed"
            app:flow_wrapMode="chain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:progress="30"
                android:progressDrawable="@drawable/background_progress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_task_progress"
                style="@style/SubTitle"
                android:gravity="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/progress_bar"
                app:layout_constraintEnd_toEndOf="@id/progress_bar"
                app:layout_constraintStart_toStartOf="@id/progress_bar"
                app:layout_constraintTop_toTopOf="@id/progress_bar"
                tools:text="1/3 subtasks completed" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                style="@style/SearchView"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:focusable="false"
                android:focusedByDefault="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_bar"
                app:queryHint="@string/search_task"
                tools:targetApi="o" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/task_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/btn_view"
                app:layout_constraintTop_toBottomOf="@id/btn_view"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/task_chip_active"
                    style="@style/Widget.Material3.Chip.Suggestion.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/active"
                    android:textColor="@color/chip_text_selector"
                    app:chipBackgroundColor="@color/chip_selector"
                    app:chipStrokeColor="@android:color/transparent" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/task_chip_done"
                    style="@style/Widget.Material3.Chip.Suggestion.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/done"
                    android:textColor="@color/chip_text_selector"
                    app:chipBackgroundColor="@color/chip_selector"
                    app:chipStrokeColor="@android:color/transparent" />

            </com.google.android.material.chip.ChipGroup>

            <ImageView
                android:id="@+id/btn_view"
                style="@style/IconButton"
                android:layout_marginVertical="8dp"
                android:contentDescription="@string/grid_view"
                android:src="@drawable/ic_grid_view"
                app:layout_constraintEnd_toEndOf="@id/search_view"
                app:layout_constraintTop_toBottomOf="@id/search_view" />

            <TextView
                android:id="@+id/txt_sort"
                style="@style/SubTitle"
                android:text="@string/sorting_option"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/btn_view"
                app:layout_constraintStart_toStartOf="@id/search_view"
                app:layout_constraintTop_toTopOf="@id/btn_view" />

            <Spinner
                android:id="@+id/sort_menu"
                style="@style/Spinner"
                app:layout_constraintEnd_toStartOf="@id/btn_view"
                app:layout_constraintBottom_toBottomOf="@id/txt_sort"
                app:layout_constraintStart_toEndOf="@id/txt_sort"
                app:layout_constraintTop_toTopOf="@id/txt_sort" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_layout"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/btn_create_new_task"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/create_new_task"
                android:visibility="gone"
                app:drawableTopCompat="@drawable/ic_add_task"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/task_recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                android:transitionGroup="true"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/task_item" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_task"
            style="@style/FloatingActionButton"
            android:contentDescription="@string/add_task"
            android:src="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_voice_task"
            style="@style/FloatingActionButton"
            android:contentDescription="@string/add_task_by_speak"
            android:src="@drawable/ic_mic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_delete_all"
            style="@style/FloatingActionButton"
            android:contentDescription="@string/add_task_by_speak"
            android:src="@drawable/ic_delete"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?android:colorBackground"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
