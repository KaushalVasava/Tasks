    <fragment
        android:id="@+id/subTaskFragment"
        android:name="com.lahsuak.apps.mytask.ui.fragments.SubTaskFragment"
        tools:layout="@layout/fragment_subtask">
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="task_title"
            app:argType="string" />
        <argument
            android:name="completed"
            app:argType="boolean" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="myapp://kmv.com/editFragment/{id}{task_title}{completed}" />
        <action
            android:id="@+id/action_subTaskFragment_to_renameFragmentDialog"
            app:destination="@id/renameFragmentDialog" />

    </fragment>
    <dialog
        android:id="@+id/deleteAllCompletedDialogFragment"
        android:name="com.lahsuak.apps.mytask.ui.fragments.DeleteAllCompletedDialogFragment"
        android:label="DeleteAllCompletedDialogFragment" />
    <action
        android:id="@+id/action_global_deleteAllCompletedDialogFragment"
        app:destination="@id/deleteAllCompletedDialogFragment" />
    <dialog
        android:id="@+id/deleteAllCompletedDialogFragment2"
        android:name="com.lahsuak.apps.mytask.ui.fragments.DeleteAllCompletedDialogFragment2"
        android:label="DeleteAllCompletedDialogFragment2">
        <argument
            android:name="taskID"
            app:argType="integer" />
    </dialog>
    <action
        android:id="@+id/action_global_deleteAllCompletedDialogFragment2"
        app:destination="@id/deleteAllCompletedDialogFragment2" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.lahsuak.apps.mytask.ui.fragments.SettingsFragment"
        android:label="@string/settings" />
    <dialog
        android:id="@+id/renameFragmentDialog"
        android:name="com.lahsuak.apps.mytask.ui.fragments.AddUpdateTaskFragmentDialog"
        android:label="RenameFragmentDialog"
        tools:layout="@layout/dialog_add_update_task">
        <argument
            android:name="source"
            app:argType="boolean" />
        <argument
            android:name="task_id"
            app:argType="integer" />
        <argument
            android:name="task_title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="subTaskId"
            app:argType="integer" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="myapp://kmv.com/rename/{source}{task_id}{tak_title}{subTaskId}" />
    </dialog>
    <dialog
        android:id="@+id/shortcutFragmentDialog"
        android:name="com.lahsuak.apps.mytask.ui.fragments.ShortcutFragmentDialog"
        android:label="ShortcutFragmentDialog"
        tools:layout="@layout/dialog_add_update_task">
        <argument
            android:name="task_id"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="tak_title"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="myapp://kmv.com/shortcut" />
    </dialog>
    <action
        android:id="@+id/action_global_shortcutFragmentDialog"
        app:destination="@id/shortcutFragmentDialog" />
</navigation>